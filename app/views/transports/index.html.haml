%h1 Transportes
= smart_listing_controls_for(:transports, {class: "form-inline text-right"}) do
  .form-group.filter.input-append
    = text_field_tag :filter, '', class: "search form-control",
                          placeholder: "buscar...", autocomplete: :off
    = select_tag :category, "<option>Avion</option><option>Bus</option><option>Tren</option>".html_safe ,
                          :prompt=>"Todos" ,
                          class: "search form-control",
                          autocomplete: :off
    = text_field_tag :fciudad, '', class: "search form-control",
                          placeholder: "origen...", autocomplete: :off
    = text_field_tag :tciudad, '', class: "search form-control",
                          placeholder: "destino...", autocomplete: :off
= smart_listing_render :transports
