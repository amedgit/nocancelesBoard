.col-md-6.col-md-offset-3
  .row
    .panel.panel-default
      .panel-heading
        %h2 Entrar
      .panel-body
        = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .form-inputs
            = f.input :email, required: false, autofocus: true , label: "Correo"
            = f.input :password, required: false , label: "Contraseña"
            = f.input :remember_me, label: "Recuérdame" , as: :boolean if devise_mapping.rememberable? 
          .form-actions
            = f.button :submit, "Entrar" , class: "btn btn-primary"
      .panel-footer
        = render "devise/shared/links"
