.row#pin_show
  .col-md-8.col-md-offset-2
    .panel.panel-default
      .panel-heading.pin_image
        = image_tag @ocio.pics.first.image.url
      .panel-body
        %h1= @ocio.title
        %p.description
          %h3
            %strong= @ocio.cat
          = @ocio.desc
          El
          %strong precio
          es
          %strong= @ocio.price
          euros
          y estar√° en
          %strong= @ocio.dir
          en la fecha de
          %strong= @ocio.fecha
        %p
          submited by
          %strong= @ocio.user.email
      .panel-footer
        .row
          .col-md-6
            %p.user
              submited by
              %strong= @ocio.user.email
          .col-md-6
            .btn-group.pull-right
              = link_to like_ocio_path(@ocio) , method: :put , class: "btn btn-info" do
                %span.glyphicon.glyphicon-heart
                  = @ocio.get_upvotes.size
              -if user_signed_in? && current_user.id == @ocio.user_id
                = link_to  edit_ocio_path(@ocio) , class: 'btn btn-warning' do
                  %span.glyphicon.glyphicon-pencil
                = link_to  @ocio , method: :delete , data: {confirm: "Are you sure?"}, class: 'btn btn-danger' do
                  %span.glyphicon.glyphicon-trash
= render partial: 'comments/comments' , locals: { commentable: @ocio }
= render partial: 'comments/form' , locals: { commentable: @ocio }
