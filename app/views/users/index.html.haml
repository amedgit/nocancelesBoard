.col-md-6.col-md-offset-3
  .panel.panel-default
    .panel-heading
      %h1
        ="Lista de los usuarios (#{User.count})"
    .panel-body
      .table-responsive
        %table.table.table-hover
          %thead
            %tr
              %th El Usuario
              %th Auncios Publicados
              %th Su Perfil
          - @users.each do |user|
            %tbody
              %tr
                %td= user.email
                %td= link_to "#{user_posts user} anuncios" , "#" , class: "btn btn-success btn-sm" if (user_posts user) != 0
                %td= link_to "ver perfil" , user.perfil , class: "btn btn-info btn-sm" if user.perfil.present?

        %br
