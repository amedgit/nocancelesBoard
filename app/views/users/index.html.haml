.col-md-8.col-md-offset-2
  .panel.panel-default
    .panel-heading
      %h1
        ="Los Usuarios (#{User.count})"
    .panel-body
      .table-responsive
        %table.table.table-hover
          %thead
            %tr
              %th El Usuario
              %th Anun. Publicados
              %th El Perfil
          - @users.each do |user|
            %tbody
              %tr
                %td= user.email
                %td
                  -if (user_posts user) > 0
                    %li.dropdown
                      %a.dropdown-toggle.btn.btn-success.btn-sm{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown" , :role => "button"}
                        = "#{user_posts user} anuncios"
                        %span.caret
                      %ul.dropdown-menu
                        .table-responsive
                          %table.table.table-bordered
                            %thead
                              %tr
                                %th
                                  Transportes
                                  %span.badge= user.transports.count
                                %th
                                  Ocios
                                  %span.badge= user.ocios.count
                                %th
                                  Alojamientos
                                  %span.badge= user.alojamientos.count

                            %tbody
                              %tr
                                %td.col-md-4
                                  - user.transports.each do |t|
                                    %li= link_to truncate(t.title, length: 10) , t , class: "btn btn-default"
                                    %li.divider{role: "separator"}
                                %td.col-md-4
                                  - user.ocios.each do |o|
                                    %li= link_to truncate(o.title, length: 10) , o , class: "btn btn-default"
                                    %li.divider{role: "separator"}
                                %td.col-md-4
                                  - user.alojamientos.each do |a|
                                    %li= link_to truncate(a.title, length: 10) , a , class: "btn btn-default"
                                    %li.divider{role: "separator"}

                %td= link_to "ver perfil" , user.perfil , class: "btn btn-info btn-sm" if user.perfil.present?

        %br
