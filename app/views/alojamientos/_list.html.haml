- unless smart_listing.empty?
  %table.table.table-striped
    %thead
      %th.col-md-3= smart_listing.sortable "Título", "title"
      %th.col-md-3= smart_listing.sortable "Categoria", "cat"
      %th.col-md-2= smart_listing.sortable "Precio", "price"
      %th.col-md-2= smart_listing.sortable "Ciudad", "city"
      %th.col-md-2= smart_listing.sortable "Fecha", "fecha_ir"

    %tbody
      - smart_listing.collection.each do |alojamiento|
        %tr
          -# User row goes here...
          %td
            = link_to   alojamiento do
              = truncate(alojamiento.title, length: 25)
              %span.badge= alojamiento.comments.count
          %td= alojamiento.cat 
          %td
            = alojamiento.price
            €
          %td= alojamiento.city
          %td= alojamiento.created_at.to_formatted_s(:short)


  -# Render nice pagination links fitted for Bootstrap 3 by default
  = smart_listing.paginate
  = smart_listing.pagination_per_page_links
- else
  %p.warning Ningún alojamiento!
