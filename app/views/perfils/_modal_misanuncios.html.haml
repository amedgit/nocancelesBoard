/ Button trigger modal
%button.btn.btn-primary{"data-target" => "#myModal", "data-toggle" => "modal", :type => "button"}
  ver los anuncios
  %span.badge= user_posts @perfil.user
/ Modal
#myModal.modal.fade{"aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4#myModalLabel.modal-title Lista De Los Anuncios
      .modal-body
        .table-responsive
          %table.table.table-bordered
            %thead
              %tr
                %th
                  Transp.
                  %span.badge= @perfil.user.transports.count
                %th
                  Ocios
                  %span.badge= @perfil.user.ocios.count
                %th
                  Alojam.
                  %span.badge= @perfil.user.alojamientos.count
            %tbody
              %tr
                %td.col-md-4
                  - @perfil.user.transports.each do |t|
                    %li= link_to truncate(t.title, length: 10) , t , class: "btn btn-success"
                    %li.divider{role: "separator"}
                %td.col-md-4
                  - @perfil.user.ocios.each do |o|
                    %li= link_to truncate(o.title, length: 10) , o , class: "btn btn-info"
                    %li.divider{role: "separator"}
                %td.col-md-4
                  - @perfil.user.alojamientos.each do |a|
                    %li= link_to truncate(a.title, length: 10) , a , class: "btn btn-primary"
                    %li.divider{role: "separator"}

      .modal-footer
        %button.btn.btn-primary{"data-dismiss" => "modal", :type => "button"} Close
