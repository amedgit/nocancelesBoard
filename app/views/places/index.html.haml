.row
  .col-md-4
    .panel.panel-default
      .panel-heading
        %h1= link_to "Transportes" , transports_path , class: "btn btn-primary btn-block btn-lg "
      - if @transports.any?
        - @transports.each do |transport|
          .panel-body
            =link_to (image_tag transport.pics.first.image.url(:medium)) , transport
            %h2= link_to transport.title , transport
      - else
        %h4 Aún no hay nada de transportes!
