.row
  .col-md-4
    .panel.panel-default
      .panel-heading
        %h1= link_to "Transportes (#{Transport.count})" , transports_path , class: "btn btn-primary btn-block btn-lg "
      .panel-body
        - if @transports.any?
          - @transports.limit(3).each do |transport|
            .panel-group
              .panel.panel-info
                .panel-heading
                  =link_to (image_tag transport.pic.image.url(:medium) , class: "img-rounded img-responsive") , transport
                  %h2= link_to transport.title , transport
        - else
          %h4 Aún no hay nada de transportes!
