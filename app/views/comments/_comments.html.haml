.row
  .col-md-8.col-md-offset-2
    %h3
      %strong= pluralize( commentable.comments.count , "commentario")
    - commentable.comments.each do |comment|
      .panel.panel-default
        .panel-heading.pan-comment
          .row
            .col-md-6
              .commenter
                %strong= comment.user.email
                = distance_of_time_in_words(comment.created_at , Time.now )
            .col-md-6
              %div{class: "btn-group pull-right comment_#{comment.id}"}
                = render partial: 'comments/comment_likes' , locals: {comment: comment , commentable: commentable}
        .panel-body.pan
          = comment.body
