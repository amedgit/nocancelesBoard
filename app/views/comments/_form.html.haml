.row
  .col-md-8.col-md-offset-2
    = simple_form_for [commentable , Comment.new] do |f|
      .form-group
        = f.input :body , input_html: { class: "form-control"} , placeholder: "Añadir un comentario" , label: false , required: true
      = f.button :submit , "Envía" , class: "btn btn-primary"
